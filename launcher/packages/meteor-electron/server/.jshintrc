{
  // If you are using SublimeLinter, after modifying this config file, be sure to close and reopen
  // the file(s) you were editing to see the changes take effect.

  "extends": "../.jshintrc",

  // Whitelist Node's global variables so JSHint doesn't complain about them being undefined.
  "node": true,

  // Whitelist additional global variables.
  "globals": {
    // Meteor's globals.
    "Assets": false,
    "Meteor": false,
    "Npm": false,
    "Package": false,
    "Promise": false,

    // Our dependencies.
    "_": false,
    "Mongo": false,
    "WebApp": false,

    // Global functions.
    "canServeUpdates": true,
    "createBinaries": true,
    "launchApp": true,
    "parseMacDownloadUrl": true,
    "parseWindowsDownloadUrls": true,
    "serve": true,
    "serveDir": true,
    "serveDownloadUrl": true,
    "serveUpdateFeed": true,

    // Global variables.
    "DOWNLOAD_URLS": true,
    "UPDATE_FEED_PATH": true
  }
}
