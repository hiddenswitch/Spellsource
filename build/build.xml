<?xml version="1.0" encoding="UTF-8"?>
<project name="MetaStone" default="do-deploy" basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar" />
				<file name="${java.home}\lib\jfxrt.jar" />
				<file name="${basedir}" />
			</filelist>
		</path>

		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpathref="fxant" />
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />

		<mkdir dir="externalLibs" />

		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib">
				<filename name="logback-classic-1.1.2.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\commons-lang3-3.3.2">
				<filename name="commons-lang3-3.3.2.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="httpclient-4.3.4.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib">
				<filename name="nitty-gritty-mvc.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="fluent-hc-4.3.4.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\google-gson-2.2.4">
				<filename name="gson-2.2.4.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="commons-codec-1.6.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib">
				<filename name="slf4j-api-1.7.10.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\commons-io-2.4">
				<filename name="commons-io-2.4.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="httpcore-4.3.2.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="commons-logging-1.1.3.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="httpclient-cache-4.3.4.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib\httpcomponents-client-4.3.4\lib">
				<filename name="httpmime-4.3.4.jar" />
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\projects\java\MetaStone\lib">
				<filename name="logback-core-1.1.2.jar" />
			</fileset>
		</copy>

		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\projects\java\MetaStone">
				<include name="src/**" />
			</fileset>
		</copy>

		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />

		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="commons-codec-1.6.jar" />
				<include name="logback-core-1.1.2.jar" />
				<include name="lib" />
				<include name="httpclient-cache-4.3.4.jar" />
				<include name="commons-lang3-3.3.2.jar" />
				<include name="httpmime-4.3.4.jar" />
				<include name="slf4j-api-1.7.10.jar" />
				<include name="gson-2.2.4.jar" />
				<include name="logback-classic-1.1.2.jar" />
				<include name="nitty-gritty-mvc.jar" />
				<include name="httpcore-4.3.2.jar" />
				<include name="fluent-hc-4.3.4.jar" />
				<include name="commons-logging-1.1.3.jar" />
				<include name="commons-io-2.4.jar" />
				<include name="httpclient-4.3.4.jar" />
			</fileset>
		</copy>

		<!-- Copy project references -->

		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*" />
			</fileset>
		</copy>

		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*" />
				</fileset>
			</classpath>
		</javac>

		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
			<fileset dir="project/src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>


	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist" />
		<delete file="deploy" />

		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />

		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>

		<copy todir="dist/decks">
			<fileset dir="../decks" />
		</copy>

		<copy todir="deploy/decks">
			<fileset dir="C:\projects\java\MetaStone\decks\">
				<include name="*" />
			</fileset>
		</copy>

		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="MetaStone.jar" />
			<fx:fileset dir="dist" includes="libs/*" />
			<fx:fileset dir="dist" includes="decks/*" />
		</fx:resources>

		<fx:application id="fxApplication" name="Metastone" mainClass="net.demilich.metastone.MetaStone" toolkit="fx" />

		<mkdir dir="build/classes/META-INF" />

		<fx:jar destfile="dist/MetaStone.jar">
			<fx:application refid="fxApplication" />
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes" />
			<fx:platform javafx="2.1+">
				<fx:jvmarg value="-Xmx1024m" />
			</fx:platform>

			<manifest>
				<attribute name="Implementation-Vendor" value="demilich" />
				<attribute name="Implementation-Title" value="MetaStone" />
				<attribute name="Implementation-Version" value="0.9.5" />
				<attribute name="JavaFX-Feature-Proxy" value="None" />
			</manifest>
		</fx:jar>


		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy embedJNLP="false" extension="false" width="1024" height="768" includeDT="false" offlineAllowed="true" outdir="${basedir}/deploy" outfile="MetaStone" nativeBundles="exe" updatemode="background" verbose="false">

			<fx:info title="MetaStone" vendor="demilich" />
			<fx:application refId="fxApplication" />
			<fx:resources refid="appRes" />
			<fx:platform javafx="2.1+">
				<fx:jvmarg value="-Xmx1024m" />
			</fx:platform>
		</fx:deploy>

		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css" />
		</fx:csstobin>

	</target>
</project>
