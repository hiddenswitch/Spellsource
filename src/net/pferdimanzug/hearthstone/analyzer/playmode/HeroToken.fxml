<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>

<fx:root type="BorderPane" id="" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <center>
    <StackPane prefHeight="-1.0" prefWidth="-1.0">
      <children>
        <ImageView fx:id="portrait" fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@../resources/img/heroes/garrosh.png" />
          </image>
        </ImageView>
        <ImageView fitHeight="30.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true" translateY="0.0" StackPane.alignment="BOTTOM_RIGHT">
          <image>
            <Image url="@../resources/img/common/health_value_icon.png" />
          </image>
        </ImageView>
        <Label id="outlined_score" fx:id="hpLabel" text="0" translateX="-8.0" translateY="-2.0" StackPane.alignment="BOTTOM_RIGHT">
          <StackPane.margin>
            <Insets />
          </StackPane.margin>
        </Label>
        <ImageView fitHeight="150.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" translateY="4.0" StackPane.alignment="BOTTOM_LEFT">
          <image>
            <Image url="@../resources/img/common/attack_value_icon.png" />
          </image>
        </ImageView>
        <Label id="outlined_score" fx:id="attackLabel" alignment="BOTTOM_LEFT" text="0" translateX="11.0" translateY="-2.0" StackPane.alignment="BOTTOM_LEFT" />
      </children>
      <padding>
        <Insets left="8.0" />
      </padding>
    </StackPane>
  </center>
  <padding>
    <Insets bottom="8.0" top="8.0" />
  </padding>
  <right>
    <VBox maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0">
      <children>
        <ImageView id="heropower" fx:id="heroPowerIcon" fitHeight="150.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true" translateY="0.0" y="0.0">
          <image>
            <Image url="@../resources/img/powers/armor_up.png" />
          </image>
        </ImageView>
        <Label id="mana" fx:id="manaLabel" alignment="CENTER" maxWidth="64.0" text="Mana: 10/10" textAlignment="LEFT" textFill="#0066ff" translateX="8.0" translateY="4.0" wrapText="true" VBox.vgrow="ALWAYS">
          <font>
            <Font name="Arial Bold" size="16.0" />
          </font>
          <VBox.margin>
            <Insets left="4.0" />
          </VBox.margin>
        </Label>
      </children>
    </VBox>
  </right>
  <stylesheets>
    <URL value="@gameboard.css" />
  </stylesheets>
</fx:root>
