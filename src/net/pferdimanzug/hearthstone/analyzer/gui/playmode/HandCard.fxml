<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root id="card-border" prefHeight="120.0" prefWidth="80.0" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <bottom>
    <StackPane prefHeight="0.0" prefWidth="0.0" translateY="8.0">
      <children>
        <ImageView fx:id="attackIcon" fitHeight="150.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true" translateX="-5.0" translateY="-2.0" StackPane.alignment="BOTTOM_LEFT">
          <image>
            <Image url="@../../resources/img/common/attack_value_icon.png" />
          </image>
        </ImageView>
        <ImageView fx:id="hpIcon" fitHeight="150.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" translateX="4.0" translateY="-4.0" StackPane.alignment="BOTTOM_RIGHT">
          <image>
            <Image url="@../../resources/img/common/health_value_icon.png" />
          </image>
        </ImageView>
        <Text id="outlined-score" fx:id="attackLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="0" translateX="4.0" translateY="-6.0" StackPane.alignment="BOTTOM_LEFT" />
        <Text id="outlined-score" fx:id="hpLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="0" translateX="-4.0" translateY="-6.0" StackPane.alignment="BOTTOM_RIGHT" />
      </children>
    </StackPane>
  </bottom>
  <center>
    <Label fx:id="nameLabel" alignment="CENTER" maxWidth="78.0" text="&lt;card name&gt;" textAlignment="CENTER" wrapText="true" BorderPane.alignment="TOP_CENTER">
      <font>
        <Font name="Arial Bold" size="12.0" />
      </font>
    </Label>
  </center>
  <stylesheets>
    <URL value="@gameboard.css" />
  </stylesheets>
  <top>
    <StackPane prefHeight="-1.0" prefWidth="-1.0">
      <children>
        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" translateX="-8.0" translateY="-4.0" StackPane.alignment="TOP_LEFT">
          <image>
            <Image url="@../../resources/img/common/mana_crystal.png" />
          </image>
        </ImageView>
        <Text id="outlined-score" fx:id="manaCostLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="0" StackPane.alignment="TOP_LEFT" />
      </children>
    </StackPane>
  </top>
</fx:root>
